
.test-container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.test-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}
.test-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  display: block;
}
.test-content {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.test-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 40rpx;
}
.test-info {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}
.test-info text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.test-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  border: none;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
.test-result {
  color: #4CAF50;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  display: block;
}

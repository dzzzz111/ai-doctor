
.simple-container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding: 20rpx;
}
.simple-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.simple-title {
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}
.simple-subtitle {
  color: rgba(255,255,255,0.9);
  font-size: 28rpx;
  display: block;
}
.simple-content {
  padding: 0 20rpx;
}
.welcome-card {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}
.welcome-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
}
.function-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.btn-item {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  border-left: 8rpx solid #667eea;
}
.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}
.btn-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}
.btn-item:active {
  background: #f8f9fa;
  transform: scale(0.98);
}
